{
    "compilerOptions": {
      "outDir": "./dist-ts",
      "allowJs": true,
      "target": "es5",
			"moduleResolution": "node",
      "isolatedModules": true,
      "esModuleInterop": true,
			"skipLibCheck": true,
      "resolveJsonModule": true,
			"sourceMap": true,
      "allowSyntheticDefaultImports": true,
			"lib": ["DOM","ES2015"]
    },
		"include": ["src/**/*"],
		"exclude": ["node_modules/*"]
  }